import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int count = 0;
		int add = 0;
		int now_Number = 0;
		int size = input.nextInt();
		int[][] tour_List = new int[size][2];
		for (int i = 0; i < size; i++) {
			tour_List[i][0] = input.nextInt();
			tour_List[i][1] = input.nextInt();
		}
		int distance = 0;
		for (int i = 0; i < size; i++) {
			distance = tour_List[i][1] - tour_List[i][0];
			while (true) {
				if (now_Number >= distance) {
					System.out.println(count);
					break;
				} 
				if (count % 2 == 0) {
					add++;
				}
				now_Number += add;
				count++;
			}
		}
	}
}
